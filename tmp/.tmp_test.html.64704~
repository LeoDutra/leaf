		<script type="text/javascript" src="leaf v0.7.090523a.js"></script>
	</head>
	<body>
		<table colspan='1' id="one"></table>
		<script type="text/javascript">
			var b;
			window.onload = function () {
				var d = new leaf.DOMElement();
				d.createElement('div', 'one');
				d.appendElement();
				var one = d.getElement();
				var i = 100;
				while (i--) 
				{
					d.createElement('div', 'i'+i, i*10, 10, 0, 40, i);
					d.setCSS({
						'line-height': '0px',
						'font-size': '1px'
					});
					d.setBorder('red', 1);
					d.setBackground('white');
					d.appendElement(i?one:document.body);	
				}
				b = new leaf.DOMElement(one);
				d.appendChildren(b.cloneChildElements());
				
				setTimeout(foo, 1000);
			};
			
			function foo() {
				
				b.removeChildren();
			}
			
			
			
		</script>
	</body>
</html>
